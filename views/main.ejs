<%- include('header')%>
<div class="main">
    <% let selected;
    let movie;
    let ids = [];
    for(let i = 0; i < movies.length; i++) {
        movie = movies[i];
        ids[i] = movie._id;
    %>
    <div class="col-md-3" >
        <input id="<%= movie._id%>" onclick="asd(movie._id)" type="image" value="" src="/moviestore/<%= movie.image%>"><%= movie.title %>
    </div>

    <% console.log(ids); } %>

    <script type="application/javascript">
        function asd(id){
            //alert("megnyomva");
            selected = id;
        }
    </script>
</div>
